{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block main %}
    <h1>Homepage</h1>
    {{ 'main_menu.item.contact.title'|trans }}

    <ul>
        {% for file in media %}
            <li><img src="{{ file.path | imagine_filter('50x50') }}" alt="{{ file.altText }}">{{ file.fileName }} | {{ file.altText }}</li>
            <li><img src="{{ file.path }}" alt="">{{ file.fileName }}</li>
        {% endfor %}
    </ul>
{% endblock %}
